@{
    ViewData["Title"] = "Banner";
    ViewData["Slug1"] = "QUẢN LÝ BANNER";
    ViewData["Slug2"] = "Quản lý banner";
}
<style>
    td {
        text-align: center;
    }
</style>
@model List<Banner>
<div class="table-responsive" id="category">
    <table class="table" style="margin-top: 20px; background-color:white; ">
        <tr style="background-color: #b4dca4; ">
            <td colspan="2"><strong>Hình ảnh</strong></td>
            <td><strong>Loại banner</strong></td>
            <td></td>
        </tr>
        @foreach (var item in Model)
        {
            Image img = Image.SelectOne(item.id_img);
            <tr>
                <td colspan="2"><img src="@img.link" style="width:30%; height:30%" /></td>
                <td>@item.description</td>
                <td>
                    <a class="btn btn-warning" asp-controller="banner" asp-action="update" asp-route-id="@item.id_banner">Xem</a>
                </td>
            </tr>
        }
    </table>
</div>