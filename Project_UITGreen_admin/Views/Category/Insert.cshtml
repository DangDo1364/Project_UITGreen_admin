@{
    ViewData["Title"] = "InsertCategory";
    ViewData["Slug1"] = "QUẢN LÝ DANH MỤC";
    ViewData["Slug2"] = "Quản lý danh mục";
}
@model List<Category>

    <h3 style="text-align: center; margin-bottom: 10px; margin-top:20px;">Thêm Danh Mục</h3>
    <form action="/Category/InsertCat" method="post">
        <div class="form-group">
            <label>Tênh danh mục:</label>
            <input type="text" class="form-control" id="name_cat" name="name_cat" required>
        </div>
        <div class="form-group">
            <label>Mã danh mục cha:</label>
            <select class="form-control" id="id_parent" name="id_parent" required>
                <option value="0">Danh mục cha</option>
                @foreach (var item in Model)
                {
                <option value="@item.id_cat">@item.name_cat</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-success" id="submit" value="Thêm">Submit</button>
        <a asp-action="Index" style="float:right;">Quay lại</a>
    </form>
