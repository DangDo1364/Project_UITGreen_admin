@{
    ViewData["Title"] = "InsertĐNH";
    ViewData["Slug1"] = "QUẢN LÝ NHẬP HÀNG";
    ViewData["Slug2"] = "Quản lý nhập hàng";
}

@model List<Product>

<h3 style="text-align: center; margin-bottom: 10px; margin-top:20px;">Nhập hàng</h3>
<div class="container">
    <form asp-controller="storageimport" asp-action="insertimp" method="post">
        <div class=row>
            <div class="col-sm-4">
                <div class="form-group">
                    <label>Tên sản phẩm:</label>
                    <select class="form-control" id="id_pro" name="id_pro">
                        @foreach (var item in Model)
                        {
                            <option value="@item.id_pro">@item.name_pro</option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label>Giá nhập:</label>
                    <input type="text" class="form-control" id="first_price" name="first_price" required>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label>Số lượng</label>
                    <input type="text" class="form-control" id="quantity" name="quantity" required>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label>Lý do nhập hàng:</label>
            <textarea class="form-control" name="reason" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-success" id="submit" value="Thêm">Submit</button>
        <a asp-action="index" style="float:right;">Quay lại</a>
    </form>
</div>