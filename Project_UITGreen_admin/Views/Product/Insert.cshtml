@{
    ViewData["Title"] = "InsertProduct";
    ViewData["Slug1"] = "QUẢN LÝ SẢN PHẨM";
    ViewData["Slug2"] = "Quản lý sản phẩm";
}

@model List<Category>
<h3 style="text-align: center; margin-bottom: 10px; margin-top:20px;">Thêm sản phẩm</h3>
<div class="container">
    <form asp-controller="product" asp-action="insertpro" method="post">
        <div class=row>
            <div class="col-sm-6">
                <div class="form-group">
                    <label>Tên sản phẩm:</label>
                    <input type="text" class="form-control" name="name_pro" required>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label>Đơn giá</label>
                    <input type="text" class="form-control" name="price">
                </div>
            </div>
        </div>
        <div class=row>
            <div class="col-sm-6">
                <div class="form-group">
                    <label>Mã danh mục:</label>
                    <select class="form-control" name="id_cat">
                        @foreach (var item in Model)
                        {
                            <option value="@item.id_cat">@item.name_cat</option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label>Xuất xứ</label>
                    <input type="text" class="form-control" name="origin">
                </div>
            </div>
        </div>
        <div class=row>
            <div class="col-sm-4">
                <div class="form-group">
                    <label>Đơn vị</label>
                    <input type="text" class="form-control" name="type">
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label>Giảm giá(%)</label>
                    <input type="text" class="form-control" name="discount">
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label>Chênh lệch(%)</label>
                    <input type="text" class="form-control" name="sale_rate">
                </div>
            </div>
        </div>
        <div class="form-group">
            <label>Link ảnh sản phẩm:</label><textarea class="form-control" name="link1" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label>Link ảnh sản phẩm:</label><textarea class="form-control" name="link2" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label>Link ảnh sản phẩm:</label><textarea class="form-control" name="link3" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label>Link ảnh sản phẩm:</label><textarea class="form-control" name="link4" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label>Link ảnh sản phẩm:</label><textarea class="form-control" name="link5" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label>Thông tin</label>
            <textarea class="form-control" id="status" name="status" rows="5"></textarea>
        </div>
        <button type="submit" class="btn btn-success" id="submit" value="Thêm">Submit</button>
        <a asp-action="Index" style="float:right;">Quay lại</a>
    </form>
</div>

    

   
    
   
    
    
   
    

